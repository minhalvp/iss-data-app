<div class="main">
    <h1>Where are the Astronauts? 🧑‍🚀</h1>
    <p>
        <% if data['number'] == 0 %>
            There are No Astronauts in space right now!
        <% elsif data['number'] == 1 %>
            There is 1 Astronaut in space right now!
        <% else %>
            There are <%= data['number'] %> Astronauts in space right now!
        <% end %>
    </p>
    <table class="astro-table">
        <tr>
            <th>Name</th>
            <th>Craft</th>
        </tr>
        <% data['people'].each do |person| %>
            <tr>
                <td><%= person['name'] %></td>
                <td><%= person['craft'] %></td>
            </tr>
        <% end %>
    </table>
</div>